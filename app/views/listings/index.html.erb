<div class="jumbotron center">
<div class="container">
<h1>finexpr</h1>
<h4>The first platform where financial analysts can</br> buy and sell their financial models</h4>
</div>
</div>

<div class="container">
<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail"> 
          <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= number_to_currency(listing.price) %></p>
            <p><%= "Sold by #{listing.user.name}"  %></p>      
          </div>
        </div>
    </div>
    <% end %>
  </div>
</div>
</div>